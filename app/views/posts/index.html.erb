<p id="notice"><%= notice %></p>

<div class = "col-md-12">
<h1>All Posts</h1>
<br><br />

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title.titleize %></td>
        <td><%= link_to 'Show', post, class: "btn" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: "btn" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, class: "btn", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
</div>