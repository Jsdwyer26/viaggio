<h1>New City</h1>

<%= form_for @city, html: { multipart: true } do |f| %>
	<div class="form-group">
	    <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "name" %>
	</div>
	<div class="form-group">  
		<%= f.text_field :nickName, class: "form-control focus",  placeholder: "nickname" %>
	</div>
	<div class="form-group">  
		<%= f.file_field :image %>
	</div>
	<div class="form-group">
		<%= f.submit "Post", class: "btn btn-primary" %>
	</div>
<% end %>

<%= link_to 'Back', cities_path %>
